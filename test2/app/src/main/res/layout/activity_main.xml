<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gray_DarkGray1">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="1dp"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
            app:title="@string/home"
            app:titleTextColor="@color/Black"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            app:navigationIcon="@drawable/user2"/>
    </com.google.android.material.appbar.AppBarLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_3D"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="3dp"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2dp"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_3D"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/modeling"/>

                <TextView
                    android:id="@+id/name_3D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal"
                    android:elevation="2dp"
                    android:background="@color/Black_transparent_black_hex_1"
                    android:text="Mô hình"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:fontFamily="@font/segoe_ui_bold"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_list"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="3dp"
            android:layout_gravity="right"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2dp"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_list"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/list5"/>

                <TextView
                    android:id="@+id/name_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal"
                    android:elevation="2dp"
                    android:background="@color/Black_transparent_black_hex_1"
                    android:text="Danh sách"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:fontFamily="@font/segoe_ui_bold"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_search"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="3dp"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2dp"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_search"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/documents"/>

                <TextView
                    android:id="@+id/name_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal"
                    android:elevation="2dp"
                    android:background="@color/Black_transparent_black_hex_1"
                    android:text="Tìm kiếm"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:fontFamily="@font/segoe_ui_bold"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_direction"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="3dp"
            android:layout_gravity="right"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2dp"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_direction"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/navigator"/>

                <TextView
                    android:id="@+id/name_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal"
                    android:elevation="2dp"
                    android:background="@color/Black_transparent_black_hex_1"
                    android:text="Chỉ đường"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:fontFamily="@font/segoe_ui_bold"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>